{
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "css",
    "markdown",
    "javascript",
    "typescript",
    "typescriptreact",
    "python"
  ],
  "coc.preferences.rootPatterns": [
    ".git",
    ".hg",
    ".projections.json",
    "pyproject.toml"
  ],
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["-l 79"]
}
